<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Moedix.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Moedix"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False"   
    Title="Moedix"
    >

    <ShellContent Title="Home"
                  ContentTemplate="{DataTemplate local:MainPage}"
                  Route="MainPage" />

    <ShellContent Title="Créditos"
                  ContentTemplate="{DataTemplate local:CreditsPage}"
                  Route="CreditsPage" />

    <ShellContent Title="Conteúdos"
                  ContentTemplate="{DataTemplate local:ContentPageView}"
                  Route="ContentPageView" />

</Shell>
