<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Moedix.GamePage"
             BackgroundColor="#8ED6FF"
             Title="Moedix - Flappy Pig"
             NavigatedTo="OnPageLoaded">

    <AbsoluteLayout x:Name="GameLayout">
        <BoxView Color="#8ED6FF"
                 AbsoluteLayout.LayoutBounds="0,0,1,1"
                 AbsoluteLayout.LayoutFlags="All" />

        <BoxView x:Name="Ground"
                 Color="#006400"
                 HeightRequest="100"
                 AbsoluteLayout.LayoutBounds="0,1,1,100"
                 AbsoluteLayout.LayoutFlags="WidthProportional, YProportional" />

        <Ellipse x:Name="Pig"
                 WidthRequest="50"
                 HeightRequest="50"
                 Fill="Pink"
                 AbsoluteLayout.LayoutBounds="100,300,50,50" />

        <Label x:Name="ScoreLabel"
               Text="Pontos: 0"
               FontSize="28"
               FontAttributes="Bold"
               TextColor="White"
               AbsoluteLayout.LayoutBounds="20,20,200,40" />

        <Label x:Name="GameOverLabel"
               Text="Game Over"
               FontSize="36"
               FontAttributes="Bold"
               TextColor="Red"
               IsVisible="False"
               HorizontalTextAlignment="Center"
               AbsoluteLayout.LayoutBounds="0.5,0.35,0.6,80"
               AbsoluteLayout.LayoutFlags="PositionProportional, WidthProportional" />

        <Button x:Name="RestartButton"
                Text="Jogar novamente"
                BackgroundColor="#FFD700"
                TextColor="Black"
                FontAttributes="Bold"
                CornerRadius="15"
                IsVisible="False"
                Clicked="RestartGame"
                AbsoluteLayout.LayoutBounds="0.5,0.5,200,60"
                AbsoluteLayout.LayoutFlags="PositionProportional" />

        <Button x:Name="BackButton"
                Text="Voltar"
                BackgroundColor="#FFD700"
                TextColor="Black"
                FontAttributes="Bold"
                CornerRadius="10"
                Clicked="GoBackToMainPage"
                AbsoluteLayout.LayoutBounds="0.05,0.05,100,40"
                AbsoluteLayout.LayoutFlags="PositionProportional" />

    </AbsoluteLayout>
</ContentPage>
