<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Moedix.GamePage"
             NavigatedTo="OnPageLoaded"
             BackgroundColor="#8ED6FF"
             Title="Moedix - Flappy Pig">

    <AbsoluteLayout x:Name="GameLayout">

        <BoxView Color="#8ED6FF"
                 AbsoluteLayout.LayoutBounds="0,0,1,1"
                 AbsoluteLayout.LayoutFlags="All" />

        <BoxView x:Name="Ground"
                 Color="#228B22"
                 HeightRequest="100"
                 AbsoluteLayout.LayoutBounds="0,1,1,100"
                 AbsoluteLayout.LayoutFlags="WidthProportional, YProportional" />

        <Ellipse x:Name="Pig"
                 WidthRequest="50"
                 HeightRequest="50"
                 Fill="Pink"
                 Stroke="Black"
                 StrokeThickness="2"
                 AbsoluteLayout.LayoutBounds="100,300,50,50" />

        <Label x:Name="ScoreLabel"
               Text="Pontos: 0"
               FontSize="28"
               FontAttributes="Bold"
               TextColor="White"
               AbsoluteLayout.LayoutBounds="20,20,200,40" />

        <Grid x:Name="GameOverScreen"
              IsVisible="False"
              BackgroundColor="#80000000"
              AbsoluteLayout.LayoutBounds="0,0,1,1"
              AbsoluteLayout.LayoutFlags="All">

            <VerticalStackLayout HorizontalOptions="Center"
                                 VerticalOptions="Center"
                                 Spacing="15">

                <Label x:Name="FinalScoreLabel"
                       Text="Game Over!"
                       FontSize="32"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalTextAlignment="Center" />

                <Button Text="Jogar novamente"
                        BackgroundColor="#FFD700"
                        TextColor="Black"
                        CornerRadius="20"
                        Clicked="RestartGame" />

                <Button Text="Voltar"
                        BackgroundColor="#FFF"
                        TextColor="Black"
                        CornerRadius="20"
                        Clicked="GoBackToMainPage" />
            </VerticalStackLayout>
        </Grid>

    </AbsoluteLayout>
</ContentPage>
