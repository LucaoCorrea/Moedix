<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Moedix.GamePage"
             BackgroundColor="#8ED6FF"
             Title="Moedix - Flappy Pig"
             NavigatedTo="OnPageLoaded">

    <AbsoluteLayout x:Name="GameLayout">

        <BoxView Color="#8ED6FF"
                 AbsoluteLayout.LayoutBounds="0,0,1,1"
                 AbsoluteLayout.LayoutFlags="All" />

        <BoxView x:Name="Ground"
                 Color="#006400"
                 HeightRequest="100"
                 AbsoluteLayout.LayoutBounds="0,1,1,100"
                 AbsoluteLayout.LayoutFlags="WidthProportional, YProportional" />

        <Ellipse x:Name="Pig"
                 WidthRequest="50"
                 HeightRequest="50"
                 Fill="Pink"
                 AbsoluteLayout.LayoutBounds="100,300,50,50" />

        <Label x:Name="ScoreLabel"
               Text="Pontos: 0"
               FontSize="28"
               FontAttributes="Bold"
               TextColor="White"
               AbsoluteLayout.LayoutBounds="20,20,200,40" />

        <Grid x:Name="GameOverScreen"
              BackgroundColor="Black"
              IsVisible="False"
              AbsoluteLayout.LayoutBounds="0,0,1,1"
              AbsoluteLayout.LayoutFlags="All">
            <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                <Label Text="GAME OVER"
                       FontSize="48"
                       FontAttributes="Bold"
                       TextColor="Red"
                       HorizontalOptions="Center"/>
                <Label x:Name="FinalScoreLabel"
                       FontSize="24"
                       TextColor="White"
                       HorizontalOptions="Center"/>
                <Button Text="Jogar Novamente"
                        Clicked="RestartGame"
                        BackgroundColor="#FFD700"
                        CornerRadius="15"
                        WidthRequest="220"
                        HeightRequest="60"/>
                <Button Text="Voltar ao Menu"
                        Clicked="GoBackToMainPage"
                        BackgroundColor="Gray"
                        CornerRadius="10"
                        WidthRequest="200"
                        HeightRequest="50"/>
            </VerticalStackLayout>
        </Grid>

    </AbsoluteLayout>
</ContentPage>
