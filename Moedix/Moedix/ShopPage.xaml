<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Moedix.ShopPage"
             Title="Loja"
             BackgroundColor="#FFF9C4">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Loja Moedix"
                   FontSize="32"
                   FontAttributes="Bold"
                   TextColor="#6B3E26"
                   HorizontalOptions="Center" />

            <Label x:Name="CoinsLabel"
                   FontSize="20"
                   TextColor="Black"
                   Text="Moedas: 0"
                   HorizontalOptions="Center" />

            <Frame BackgroundColor="#FFF176" CornerRadius="15">
                <Button Text="Skin Dourada (50 moedas)"
                        TextColor="Brown"
                        BackgroundColor="#FFD54F"
                        Clicked="BuyGoldenSkin" />
            </Frame>

            <Frame BackgroundColor="#B3E5FC" CornerRadius="15">
                <Button Text="Poder de voo extra (100 moedas)"
                        TextColor="Navy"
                        BackgroundColor="#81D4FA"
                        Clicked="BuyExtraPower" />
            </Frame>

            <Label Text="Personalizar"
                   FontSize="26"
                   FontAttributes="Bold"
                   TextColor="#6B3E26"
                   Margin="0,20,0,10" />

            <StackLayout x:Name="CustomizationSection" IsVisible="False" Spacing="15">

                <Label Text="Selecionar Skin:" FontSize="18" TextColor="Black"/>
                <Picker x:Name="SkinPicker"
                        Title="Escolha uma skin"
                        SelectedIndexChanged="OnSkinSelected"/>

                <StackLayout Orientation="Horizontal" Spacing="10">
                    <Label Text="Ativar poder de voo extra:" FontSize="18" TextColor="Black" VerticalOptions="Center"/>
                    <Switch x:Name="PowerSwitch"
                            Toggled="OnPowerToggled" />
                </StackLayout>
            </StackLayout>

            <Button Text="Voltar"
                    Clicked="GoBack"
                    BackgroundColor="#FF8A65"
                    TextColor="White"
                    CornerRadius="12" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
