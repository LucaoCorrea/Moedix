<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Moedix.ShopPage"
             Title="Loja"
             BackgroundColor="#FFF9C4">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Loja Moedix"
               FontSize="32"
               FontAttributes="Bold"
               TextColor="#6B3E26"
               HorizontalOptions="Center" />

        <Label x:Name="CoinsLabel"
               FontSize="20"
               TextColor="Black"
               Text="Moedas: 0"
               HorizontalOptions="Center" />

        <Frame BackgroundColor="#FFF176" CornerRadius="15">
            <Button Text="Skin Dourada (50 moedas)"
                    TextColor="Brown"
                    BackgroundColor="#FFD54F"
                    Clicked="BuyGoldenSkin" />
        </Frame>

        <Frame BackgroundColor="#B3E5FC" CornerRadius="15">
            <Button Text="Poder de voo extra (100 moedas)"
                    TextColor="Navy"
                    BackgroundColor="#81D4FA"
                    Clicked="BuyExtraPower" />
        </Frame>

        <Button Text="Voltar"
                Clicked="GoBack"
                BackgroundColor="#FF8A65"
                TextColor="White"
                CornerRadius="12" />
    </VerticalStackLayout>
</ContentPage>
