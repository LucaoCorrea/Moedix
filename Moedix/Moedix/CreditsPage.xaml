<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Moedix.CreditsPage"
             BackgroundColor="#121212"
             Title="Créditos">

    <ContentPage.Content>
        <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Padding="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Text="←"
                    FontSize="35"
                    TextColor="#DFEA3F"
                    FontFamily="Poppins-SemiBold"
                    BackgroundColor="Transparent"
                    HorizontalOptions="Start"
                    VerticalOptions="Start"
                    Clicked="OnBackClicked"
                    Grid.Row="0"/>

            <ScrollView Grid.Row="1">
                <VerticalStackLayout Padding="30" Spacing="20" HorizontalOptions="Center" VerticalOptions="Center">

                    <Image Source="logo.png"
                           HeightRequest="120"
                           HorizontalOptions="Center"/>

                    <Label Text="Moedix"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="#DFEA3F"
                           HorizontalOptions="Center"
                           FontFamily="Poppins-SemiBold"/>

                    <Label Text="Nome da disciplina:"
                           FontSize="18"
                           TextColor="White"
                           HorizontalOptions="Center"/>
                    <Label Text="Programação de Computadores"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"/>

                    <Label Text="Nome do professor responsável:"
                           FontSize="18"
                           TextColor="White"
                           HorizontalOptions="Center"/>
                    <Label Text="Prof. Dr. Elvio Gilberto da Silva"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"/>

                    <Label Text="Integrantes e colaboradores do grupo:"
                           FontSize="18"
                           TextColor="White"
                           HorizontalOptions="Center"/>

                    <Label Text="Lucas Leonardi"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"/>

                    <Label Text="Miguel Bertoco"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"/>

                    <Label Text="Vinicius Lara"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"/>

                    <Label Text="Murilo Fernandes"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"/>

                    <Label Text="Elvio Silva"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"/>

                    <BoxView HeightRequest="20" Opacity="0"/>

                    <Label Text="DESENVOLVIMENTO:"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#DFEA3F"
                           HorizontalOptions="Center"/>

                    <Image Source="usclogociencia.jpg"
                           HeightRequest="70"
                           Aspect="AspectFit"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </ScrollView>
        </Grid>
    </ContentPage.Content>
</ContentPage>
