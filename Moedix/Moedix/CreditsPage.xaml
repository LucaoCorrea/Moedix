<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Moedix.CreditsPage"
             BackgroundColor="#121212">


    <Button Text="←"
         FontSize="35"
         TextColor="#FFD700"
         FontFamily="Poppins-SemiBold"
         BackgroundColor="Transparent"
         HorizontalOptions="Start"
         VerticalOptions="Start"
         Clicked="OnBackClicked"/>
    
    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" HorizontalOptions="Center"
            <Label Text="Créditos"
                   FontSize="36"
                   FontAttributes="Bold"
                   TextColor="#FFD700"
                   HorizontalOptions="Center"
                   FontFamily="Poppins-SemiBold"/>

            <Label Text="Desenvolvido por: "
                   FontSize="20"
                   TextColor="White"
                   HorizontalOptions="Center"/>

            <Label Text="Design: ..."
                   FontSize="20"
                   TextColor="White"
                   HorizontalOptions="Center"/>

            <Label Text="Conteúdo Educacional: ..."
                   FontSize="20"
                   TextColor="White"
                   HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
