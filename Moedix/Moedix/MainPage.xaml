<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Moedix.MainPage"
             BackgroundColor="#121212"
             NavigationPage.HasNavigationBar="False"
             Shell.NavBarIsVisible="False">

    <Grid VerticalOptions="Center" HorizontalOptions="Center">
        <VerticalStackLayout Padding="30" Spacing="40" HorizontalOptions="Center" VerticalOptions="Center">

            <Frame BackgroundColor="#1E1E1E"
                   CornerRadius="30"
                   HasShadow="True"
                   Padding="20"
                   HorizontalOptions="Center">
                <Image Source="logo.png"
                       HeightRequest="140"
                       WidthRequest="140"
                       Aspect="AspectFit"/>
            </Frame>

            <Label Text="Moedix"
                   FontSize="42"
                   FontAttributes="Bold"
                   TextColor="#FFD700"
                   HorizontalOptions="Center"
                   FontFamily="Poppins-SemiBold"/>

            <Label Text="Educação Financeira Infantil"
                   FontSize="18"
                   TextColor="White"
                   HorizontalOptions="Center"
                   FontFamily="Poppins-Light"/>

            <VerticalStackLayout Spacing="20" WidthRequest="250">

                <Frame CornerRadius="20" HasShadow="True" Padding="0" BackgroundColor="#FFD700">
                    <Button Text="MiniGame"
                            BackgroundColor="Transparent"
                            TextColor="#000"
                            FontAttributes="Bold"
                            FontSize="20"
                            HeightRequest="60"
                            Clicked="OnGameClicked"
                            />
                </Frame>

                <Frame CornerRadius="20" HasShadow="True" Padding="0" BackgroundColor="#FFA500">
                    <Button Text="Loja"
                            Grid.Row="4"
                            FontSize="24"
                            BackgroundColor="#F4A460"
                            TextColor="White"
                            Clicked="OnShopClicked"
                            CornerRadius="20"
                            HeightRequest="60"
                            WidthRequest="180"
                            HorizontalOptions="Center" />       
                </Frame>

                <Frame CornerRadius="20" HasShadow="True" Padding="0" BackgroundColor="#6A5ACD">
                    <Button Text="Conteúdos"
                            BackgroundColor="Transparent"
                            TextColor="White"
                            FontAttributes="Bold"
                            FontSize="20"
                            HeightRequest="60"
                            Clicked="OnContentClicked"/>
                </Frame>

                <Frame CornerRadius="20" HasShadow="True" Padding="0" BackgroundColor="#32CD32">
                    <Button Text="Créditos"
                            BackgroundColor="Transparent"
                            TextColor="White"
                            FontAttributes="Bold"
                            FontSize="20"
                            HeightRequest="60"
                            Clicked="OnCreditsClicked"
                            />
                </Frame>

                    <Button Text="Sair"
                            BackgroundColor="#FF4500"
                            TextColor="White"
                            FontAttributes="Bold"
                            FontSize="20"
                            HeightRequest="60"
                            CornerRadius="20"
                            Clicked="OnExitClicked"/>           

            </VerticalStackLayout>

        </VerticalStackLayout>
    </Grid>
</ContentPage>
